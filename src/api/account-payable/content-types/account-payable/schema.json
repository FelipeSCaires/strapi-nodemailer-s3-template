{
  "kind": "collectionType",
  "collectionName": "accounts_payable",
  "info": {
    "singularName": "account-payable",
    "pluralName": "accounts-payable",
    "displayName": "Account Payable",
    "description": "Accounts payable per clinic"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "clinic": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::clinic.clinic",
      "inversedBy": "accounts_payable",
      "required": true
    },
    "supplier": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::supplier.supplier"
    },
    "creditor_name": {
      "type": "string",
      "required": true
    },
    "description": {
      "type": "string",
      "required": true
    },
    "category": {
      "type": "enumeration",
      "enum": ["supplier", "rent", "salary", "utilities", "tax", "other"],
      "required": true
    },
    "amount": {
      "type": "decimal",
      "required": true,
      "min": 0
    },
    "amount_paid": {
      "type": "decimal",
      "default": 0,
      "min": 0
    },
    "amount_remaining": {
      "type": "decimal",
      "min": 0
    },
    "due_date": {
      "type": "date",
      "required": true
    },
    "payment_date": {
      "type": "date"
    },
    "status": {
      "type": "enumeration",
      "enum": ["pending", "overdue", "paid", "cancelled"],
      "default": "pending"
    },
    "order": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::order.order"
    },
    "invoice": {
      "type": "relation",
      "relation": "oneToOne",
      "target": "api::invoice.invoice"
    },
    "notes": {
      "type": "text"
    }
  }
}
