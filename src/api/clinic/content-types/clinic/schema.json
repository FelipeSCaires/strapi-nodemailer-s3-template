{
  "kind": "collectionType",
  "collectionName": "clinics",
  "info": {
    "singularName": "clinic",
    "pluralName": "clinics",
    "displayName": "Clinic",
    "description": "Tenant entity for multitenant architecture"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "name": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "slug": {
      "type": "uid",
      "targetField": "name",
      "required": true
    },
    "cnpj": {
      "type": "string",
      "required": true,
      "unique": true
    },
    "email": {
      "type": "email",
      "required": true
    },
    "phone": {
      "type": "string"
    },
    "address": {
      "type": "json"
    },
    "settings": {
      "type": "json"
    },
    "status": {
      "type": "enumeration",
      "enum": [
        "active",
        "suspended",
        "inactive"
      ],
      "default": "active"
    },
    "balance": {
      "type": "decimal",
      "default": 0
    },
    "credit_limit": {
      "type": "decimal",
      "default": 0
    },
    "credit_used": {
      "type": "decimal",
      "default": 0
    },
    "users": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "plugin::users-permissions.user",
      "mappedBy": "clinic"
    },
    "inventory_items": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::inventory-item.inventory-item",
      "mappedBy": "clinic"
    },
    "orders": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::order.order",
      "mappedBy": "clinic"
    },
    "transactions": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::transaction.transaction",
      "mappedBy": "clinic"
    },
    "accounts_payable": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::account-payable.account-payable",
      "mappedBy": "clinic"
    },
    "accounts_receivable": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::account-receivable.account-receivable",
      "mappedBy": "clinic"
    },
    "supplier_contracts": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::supplier-contract.supplier-contract",
      "mappedBy": "clinic"
    },
    "appointments": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::appointment.appointment",
      "mappedBy": "clinic"
    }
  }
}
