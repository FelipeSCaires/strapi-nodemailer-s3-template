{
  "kind": "collectionType",
  "collectionName": "inventory_items",
  "info": {
    "singularName": "inventory-item",
    "pluralName": "inventory-items",
    "displayName": "Inventory Item",
    "description": "Clinic inventory stock per product"
  },
  "options": {
    "draftAndPublish": false
  },
  "pluginOptions": {},
  "attributes": {
    "clinic": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::clinic.clinic",
      "inversedBy": "inventory_items",
      "required": true
    },
    "product": {
      "type": "relation",
      "relation": "manyToOne",
      "target": "api::product.product",
      "inversedBy": "inventory_items",
      "required": true
    },
    "quantity": {
      "type": "integer",
      "default": 0,
      "min": 0,
      "required": true
    },
    "min_quantity": {
      "type": "integer",
      "default": 10,
      "min": 0
    },
    "max_quantity": {
      "type": "integer",
      "min": 0
    },
    "location": {
      "type": "string"
    },
    "unit_cost": {
      "type": "decimal",
      "min": 0
    },
    "total_value": {
      "type": "decimal",
      "min": 0
    },
    "status": {
      "type": "enumeration",
      "enum": ["in_stock", "low_stock", "out_of_stock", "discontinued"],
      "default": "in_stock"
    },
    "last_purchase_date": {
      "type": "date"
    },
    "expiration_date": {
      "type": "date"
    },
    "movements": {
      "type": "relation",
      "relation": "oneToMany",
      "target": "api::inventory-movement.inventory-movement",
      "mappedBy": "inventory_item"
    }
  }
}
